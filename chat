# Define the PostgreSQL Flexible Server Firewall Rule
resource "azurerm_postgresql_firewall_rule" "allow_azure_services" {
  name                = "allow-azure-services"
  server_name         = azurerm_postgresql_server.example.name
  resource_group_name = azurerm_resource_group.example.name
  start_ip_address    = "0.0.0.0"
  end_ip_address      = "0.0.0.0"  # All Azure services are allowed
}

# Update PostgreSQL Server Configuration
resource "azurerm_postgresql_configuration" "example" {
  name                = "log_connections"
  server_name         = azurerm_postgresql_server.example.name
  resource_group_name = azurerm_resource_group.example.name
  value               = "on"
}
